{
  "DEBUG": false,

  "SERVER": {
    "URL": "127.0.0.1",
    "PORT": 3000,
    "CACHE_TEMPLATES": true
  },

  "PUSH": {
    "APNS_FEEDBACK_INTERVAL": 43200 // default to 12 hours
  },

  "DATABASE": {
    "DB_NAME": null,
    "USERNAME": null,
    "PASSWORD": null,
    "SCHEMA": null,
    "OPTIONS": {
      "dialect": "sqlite",
      "host": null,
      "port": null,
      "storage": "/home/pushserver/db/push_server_db"
    }
  },

  "LOGGING": {
    "appenders": [
      {
        "type": "file",
        "filename": "/home/pushserver/logs/push_server",
        "absolute": true,
        "maxLogSize": 20480,
        "backups": 10,
        "category": "server"
      },
      {
        "type": "file",
        "filename": "/home/pushserver/logs/push_client",
        "absolute": true,
        "maxLogSize": 20480,
        "backups": 10,
        "category": "client"
      }
    ]
  },

  "SUPPORTED_CHANNELS": ["APNS", "FCM"],
  "CHANNEL_LOOKUP": {
    "APNS": "iOS",
    "FCM": "Android"
  },

  "CREDENTIALS": {
    "FCM": {
      "PROJECT_ID": "",
      "CLIENT_EMAIL": "",
      "PRIVATE_KEY": "",
      "DATABASE_URL": ""
    },
    "APNS": {
      "CERT_FILE": "cert.pem",
      "KEY_FILE": "key.pem"
    }
  },

  "APPLICATION": {
    "NAME": "Demo",
    "CSS_APP_URL": "static/push_server.min.css",
    "JS_APP_URL": "static/push_server.min.js",
    "JS_LIBS_URL": "static/libs.min.js",
    "API_VERSION": 1
  }

}
